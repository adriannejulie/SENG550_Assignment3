# Use ARM64 OpenJDK
FROM arm64v8/openjdk:17-slim

# Set Spark environment
ENV SPARK_VERSION=3.5.3
ENV HADOOP_VERSION=3
ENV SPARK_HOME=/opt/spark
ENV PATH=$SPARK_HOME/bin:$PATH

# Install dependencies
RUN apt-get update && apt-get install -y wget curl bash && rm -rf /var/lib/apt/lists/*

# Download and extract Spark
RUN mkdir -p /opt && \
    wget https://archive.apache.org/dist/spark/spark-${SPARK_VERSION}/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION}.tgz -O /tmp/spark.tgz && \
    tar -xzf /tmp/spark.tgz -C /opt && \
    mv /opt/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION} $SPARK_HOME && \
    rm /tmp/spark.tgz

# Expose default Spark ports
EXPOSE 7077 8080 8081 8082

# Default command
CMD ["bash"]
